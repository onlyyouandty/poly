<h1>Businesses</h1>
<div>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of Interactions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @businesses.count == 0 %>
      <tr>
        <td>
          No businesses found. Click the button to add a new one
        </td>
      </tr>
    <% else %>
      <% @businesses.each do |business| %>
        <tr>
          <td><%= link_to business.name, business %></td>
          <td><%= business.interactions.count %></td>
          <td><%= link_to 'Show', business %></td>
          <td><%= link_to 'Edit', edit_business_path(business) %></td>
          <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Business', new_business_path %>
